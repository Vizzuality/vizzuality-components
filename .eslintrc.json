{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "vizzuality",
  "rules": {
    "import/no-named-as-default": 0,
    "import/no-extraneous-dependencies": [2, {
      "devDependencies": true,
      "optionalDependencies": false,
      "peerDependencies": false
    }]
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
      }
    }
  }
}
